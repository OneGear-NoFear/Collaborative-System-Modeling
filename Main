package Main;

public class Main_LBS {
    public static void main(String[] args) {

        Library library = new Library();

        // Situation 1: Add books
        Book book1 = new Book(101, "Java Programming", "James Gosling");
        Book book2 = new Book(102, "Data Structures", "Mark Weiss");

        library.addBook(book1);
        library.addBook(book2);

        // Situation 2: Register students
        Student student1 = new Student(1, "Alice");
        Student student2 = new Student(2, "Bob");

        library.registerStudent(student1);
        library.registerStudent(student2);

        // Situation 3: Issue book
        System.out.println("\nIssuing Book 101 to Alice");
        library.issueBook(student1, book1);

        // Situation 4: Try issuing same book again
        System.out.println("\nTrying to issue Book 101 to Bob");
        library.issueBook(student2, book1);

        // Situation 5: Return book
        System.out.println("\nReturning Book 101 from Alice");
        library.returnBook(student1, book1);

        // Situation 6: Issue again
        System.out.println("\nIssuing Book 101 to Bob");
        library.issueBook(student2, book1);
    }
}
